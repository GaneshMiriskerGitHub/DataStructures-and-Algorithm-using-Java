public class A1_Rat_in_a_maze {
	
	public static boolean isSafe(int[][] arr, int row, int col) {
		
		int n = arr.length;
		if(row>=0 && row <= arr.length-1 && col>=0 && col <= arr.length-1 && arr[row][col] == 1) {
			return true;
		}
		
		return false;
	}
	
