package package6_Recursion;

public class P2_Tower_of_Hanoi {
	
	
	public static void printCorrectAnswer(int n, String src, String helper, String dest) {

		if (n == 1) {
			return;
		}

		printCorrectAnswer(n - 1, A, C, B);
		System.out.println("shift from [" + A + " -> " + C + "]");
		printCorrectAnswer(n - 1, B, A, C);

	}

	public static void main(String[] args) {

		int n = 3;

		printCorrectAnswer(n, "A", "B", "C");

	}

}
