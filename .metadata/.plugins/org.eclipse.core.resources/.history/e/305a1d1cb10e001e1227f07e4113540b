	public static void solveMaze(int[][] maze) {
		
		int[][] sol = new int[4][4];
		
		int r = 0;
		int c = 0;
		int n = 4;
		int m = 4;
		
		if(solveMazeUtil(maze, 0, 0, n, m, sol)) {
			printSol(sol);
			return;
		}else {
			System.out.println("No Solution Possible");
			return;
		}
		
	}

	public static void main(String[] args) {
		
        int maze[][] = { { 1, 0, 0, 0 },
                         { 1, 1, 0, 1 },
                         { 0, 1, 0, 0 },
                         { 1, 1, 1, 1 } };
        
        solveMaze(maze);

	}

}
