package packagee12_Greedy;

import java.util.Arrays;
import java.util.Comparator;
import java.util.LinkedList;
import java.util.List;

public class Tester {
	
	public static void findMaximumActivities(int[] start, int[] end) {
		
		List<String> list = new LinkedList<>();
		
		int[][] activities = new int[3][start.length];
		
		for(int i=0;i<start.length;i++) {
			activities[0][i] = i;
			activities[1][i] = start[i];
			activities[2][i] = end[i];
		}
		
		Arrays.sort(activities, Comparator.comparingDouble(o -> o[2]));
		
		list.add("A"+activities[0][0]);
		
		int lastEnd = activities[2][0];
		for(int i=1;i<start.length;i++) {
			int currStart = start[i];
			if(currStart >= lastEnd) {
				list.add("A"+i);
				lastEnd = end[i];
			}
		}
		
		System.out.println(list);
	}

	public static void main(String[] args) {
		
		int[] start = {1, 3, 0, 5, 8, 5};
		int[] end = {2, 4, 6, 7, 9, 9};
		
		findMaximumActivities(start, end);

	}

}
