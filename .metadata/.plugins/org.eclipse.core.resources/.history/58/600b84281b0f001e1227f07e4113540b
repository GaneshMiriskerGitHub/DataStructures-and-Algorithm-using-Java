package package5_BackTracking;

public class P2_Combination_sum {

	public static void findCombinations(int[] arr, int target) {

	}

	public static void findCombinationsUtil(int[] arr, int target, int i) {

		if(target>=arr[i]) {
			// picking same value
			findCombinationsUtil(arr, target-arr[i], i);
		}
		
		
		// move to next value
		findCombinationsUtil(arr, target-arr[i+1], i+1);
	}

	public static void main(String[] args) {

		int[] arr = { 2, 4, 6, 8 };
		int target = 8;

		findCombinations(arr, target);

	}

}
