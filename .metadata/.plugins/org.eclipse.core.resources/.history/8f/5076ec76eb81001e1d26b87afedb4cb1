package package6_Recursion;

public class Tester {
	
	/*
	 * print the count of substrings whose fisrt and last char is same
	 * 
	 */

	public static void printCountOfSubstrings(String str, int i, int j) {
		
		int count = 0;
		if(str.charAt(i) == str.charAt(j)) {
			count++;
		}
		printCountOfSubstrings(str, i+1, j);
		printCountOfSubstrings(str, i, j-1);
		printCountOfSubstrings(str, i+1, j+1);
		
	}
	
	public static void main(String[] args) {
		
		String str = "abcab";
		
		printCountOfSubstrings(str, 0, str.length()-1);

	}

}
