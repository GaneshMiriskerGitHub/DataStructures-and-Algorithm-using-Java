package package8_BackTracking;

public class A1_Rat_in_a_maze {
	
	public static int noOfPaths(int[][] maze, int i, int j, int n, int m) {
		
		int w1; // r
		int w2; // 
		int w3;
		int w4;
		
		if(maze[i][j+1] !=0) {
			w1 = noOfPaths(maze, i, j+1, n, m);
		}
		
		if(maze[i+1][j] != 0) {
			w2 = noOfPaths(maze, i+1, j+1, n, m);
		}
	}

	public static void main(String[] args) {
		
		int n = 4;
		int m = 4;
		int maze[][] = { { 1, 0, 0, 0 },
                		 { 1, 1, 0, 1 },
                		 { 0, 1, 0, 0 },
                		 { 1, 1, 1, 1 } };
		
		noOfPaths( maze,0, 0, n, m);


	}

}
