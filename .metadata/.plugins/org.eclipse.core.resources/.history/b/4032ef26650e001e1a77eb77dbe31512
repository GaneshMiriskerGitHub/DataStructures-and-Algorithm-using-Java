package package8_BackTracking;

public class A1_Rat_in_a_maze {
	
	public static int noOfPaths(int[][] maze, int i, int j, int n, int m) {
		
		if(i == n-1 && j == m-1) {
			return 1;
		}
		if( i == n || j == m) {
			return 0;
		}
		
		int w1; // r
		int w2; // d
		int w3; // u
		int w4; // l
		
		if(maze[i][j+1] !=0) {
			w1 = noOfPaths(maze, i, j+1, n, m);
		}
		
		if(maze[i+1][j] != 0) {
			w2 = noOfPaths(maze, i+1, j+1, n, m);
		}
		
		if(maze[i-1][j] != 0) {
			w3 = noOfPaths(maze, i-1, j+1, n, m);
		}
		
		if(maze[i][j-1] != 0) {
			w4 = noOfPaths(maze, i-1, j+1, n, m);
		}
	}

	public static void main(String[] args) {
		
		int n = 4;
		int m = 4;
		int maze[][] = { { 1, 0, 0, 0 },
                		 { 1, 1, 0, 1 },
                		 { 0, 1, 0, 0 },
                		 { 1, 1, 1, 1 } };
		
		noOfPaths( maze,0, 0, n, m);


	}

}
